<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="airbornegamer.com.grgr4.ActivityReadConstitution"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/picTheConstition"
        android:nestedScrollingEnabled="false"
        android:src="@drawable/constituion"
        android:contentDescription="picTheConstitution"
        android:scaleType="fitStart"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/theConstitution"
        android:id="@+id/txtTheConstitution"
        android:layout_below="@+id/picTheConstition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
