<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:padding="5dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:contentDescription="picEagleFlag"
        android:src="@drawable/home_header_1" />

    <ImageView
        android:id="@+id/imgLeftBorder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgHeader"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:src="@drawable/home_header_side_1" />

    <ImageView
        android:id="@+id/imgRightBorder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgHeader"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:src="@drawable/home_header_side_1" />

    <TextView
        android:id="@+id/txtTheMovement"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/MovementIntroMsg_1"
        android:textColor="@color/primary_material_dark"
        android:textSize="15sp"
        android:layout_below="@+id/imgHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnTakeAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takeAction"
        android:text="Take Action Now!"
        android:layout_below="@+id/txtTheMovement"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtTheMovement"
        android:backgroundTint="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/bthWhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="whyTakeAction"
        android:text="Why?"
        android:layout_below="@+id/btnTakeAction"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_blue_light" />

</RelativeLayout>