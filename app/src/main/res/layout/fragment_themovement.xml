<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:padding="2dp"
    android:weightSum="1"
    android:gravity="top">

    <ImageView
        android:id="@+id/imgLeftBorder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:src="@drawable/home_header_side_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/soldier7"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imgHeader" />

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:contentDescription="picEagleFlag"
        android:src="@drawable/home_header_1"
        android:longClickable="false"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnTakeAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takeAction"
        android:text="Take Action Now!"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0052A5"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView" />

    <Button
        android:id="@+id/bthWhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="whyTakeAction"
        android:text="Why?"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@+id/btnTakeAction"
        android:layout_alignParentStart="true" />
</RelativeLayout>