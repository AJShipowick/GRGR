<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgCurrentState"
        android:layout_width="125sp"
        android:layout_height="95sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txtChangeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingStart="5dp"
        android:text="Change State?"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/imgCurrentState"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imgCurrentState" />

    <ImageView
        android:id="@+id/imgCurrentStateOutline"
        android:layout_width="120sp"
        android:layout_height="95sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtChangeState" />

    <TextView
        android:id="@+id/txtCurrentState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/txtChangeState"
        android:layout_alignEnd="@+id/imgCurrentStateOutline"
        android:layout_alignStart="@+id/imgCurrentStateOutline" />
</RelativeLayout>